{
    "name": "fatalus/php-shell",
    "description": "Run the shell Commands directly from PHP",
    "homepage": "https://github.com/fatalus69/php-shell",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "fatalus\\PhpShell\\": "src"
        }   
    },
    "authors": [
        {
            "name": "https://github.com/fatalus69"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89",
        "pestphp/pest": "^4.1",
        "symfony/var-dumper": "^7.3"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": ["./vendor/bin/pest"],
        "cs-fix": ["./vendor/bin/php-cs-fixer fix"],
        "cs-lint": ["./vendor/bin/php-cs-fixer fix --dry-run --diff"]
    }

}
